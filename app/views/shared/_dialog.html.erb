<%= tag.dialog data: { modal_target: "dialog" }, class: "dialog", role: "dialog" do %>
  <div class="dialog__header">
    <h2 class="dialog__title"><%= title %></h2>
    <button class="dialog__close" aria-label="Close" data-action="click->modal#close">
      <%= lucide_icon('x') %>
    </button>
  </div>
  <div class="dialog__content">
    <%= yield %>
  </div>
<% end %>
