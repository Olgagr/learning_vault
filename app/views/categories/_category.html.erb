<tr id="<%= dom_id(category) %>">
  <td><%= category.name %></td>
  <td><%= category.description %></td>
  <td>
    <div class="flex gap justify-end">
      <%= link_to edit_category_path(category), data: { turbo_frame: "modal" } do %>
        <%= lucide_icon('pencil') %>
      <% end %>
      <%= button_to category_path(category), method: :delete, class: "cursor-pointer block", data: { turbo_confirm: "Are you sure you want to delete this category?" } do %>
        <%= lucide_icon('trash-2') %>
      <% end %>
    </div>
  </td>
</tr>